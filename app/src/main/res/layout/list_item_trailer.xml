<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/trailer_thumbnail_width"
    android:layout_height="@dimen/trailer_thumbnail_height"
    android:padding="1dp">

    <ImageView
        android:id="@+id/trailer_poster_image_view"
        style="@style/TrailerImage"
        android:src="@drawable/ic_movie_placeholder" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/play_trailer_image_view"
            style="@style/TrailerPlayImage"/>

    </FrameLayout>
</FrameLayout>